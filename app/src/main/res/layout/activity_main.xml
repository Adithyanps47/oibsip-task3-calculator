<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:gravity="bottom|end"
        android:padding="16dp"
        android:text=""
        android:hint="0"
        android:textColorHint="?android:attr/textColorHint"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="48sp"
        android:inputType="textNoSuggestions"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:cursorVisible="true"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <Button android:id="@+id/btnSin" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="sin"
        app:layout_constraintTop_toBottomOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCos" app:layout_constraintHorizontal_weight="1" />

    <Button android:id="@+id/btnCos" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="cos"
        app:layout_constraintTop_toBottomOf="@+id/guideline" app:layout_constraintStart_toEndOf="@+id/btnSin"
        app:layout_constraintEnd_toStartOf="@+id/btnTan" app:layout_constraintHorizontal_weight="1" />

    <Button android:id="@+id/btnTan" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="tan"
        app:layout_constraintTop_toBottomOf="@+id/guideline" app:layout_constraintStart_toEndOf="@+id/btnCos"
        app:layout_constraintEnd_toStartOf="@+id/btnLog" app:layout_constraintHorizontal_weight="1" />

    <Button android:id="@+id/btnLog" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="log"
        app:layout_constraintTop_toBottomOf="@+id/guideline" app:layout_constraintStart_toEndOf="@+id/btnTan"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_weight="1" />

    <Button android:id="@+id/btnBracket" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="( )"
        app:layout_constraintTop_toBottomOf="@+id/btnSin" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSqrt" app:layout_constraintHorizontal_weight="1" />

    <Button android:id="@+id/btnSqrt" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="√"
        app:layout_constraintTop_toBottomOf="@+id/btnSin" app:layout_constraintStart_toEndOf="@+id/btnBracket"
        app:layout_constraintEnd_toStartOf="@+id/btnPower" app:layout_constraintHorizontal_weight="1" />

    <Button android:id="@+id/btnPower" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="^"
        app:layout_constraintTop_toBottomOf="@+id/btnSin" app:layout_constraintStart_toEndOf="@+id/btnSqrt"
        app:layout_constraintEnd_toStartOf="@+id/btnFactorial" app:layout_constraintHorizontal_weight="1" />

    <Button android:id="@+id/btnFactorial" style="@style/CalcButton.Sci" android:layout_width="0dp" android:text="!"
        app:layout_constraintTop_toBottomOf="@+id/btnSin" app:layout_constraintStart_toEndOf="@+id/btnPower"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_weight="1" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/sciGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btnSin,btnCos,btnTan,btnLog,btnBracket,btnSqrt,btnPower,btnFactorial" />


    <Button android:id="@+id/btnAC" style="@style/CalcButton.Top" android:text="AC"
        app:layout_constraintTop_toBottomOf="@+id/btnBracket" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPercent" app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btn7" />

    <Button android:id="@+id/btnPercent" style="@style/CalcButton.Top" android:text="%"
        app:layout_constraintTop_toBottomOf="@+id/btnBracket" app:layout_constraintStart_toEndOf="@+id/btnAC"
        app:layout_constraintEnd_toStartOf="@+id/btnBackspace" app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btn8" />

    <Button android:id="@+id/btnBackspace" style="@style/CalcButton.Top" android:text="⌫"
        app:layout_constraintTop_toBottomOf="@+id/btnBracket" app:layout_constraintStart_toEndOf="@+id/btnPercent"
        app:layout_constraintEnd_toStartOf="@+id/btnDivide" app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btn9" />

    <Button android:id="@+id/btnDivide" style="@style/CalcButton.Operator" android:text="÷"
        app:layout_constraintTop_toBottomOf="@+id/btnBracket" app:layout_constraintStart_toEndOf="@+id/btnBackspace"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btnMultiply" />

    <Button android:id="@+id/btn7" style="@style/CalcButton" android:text="7"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn8" app:layout_constraintBottom_toTopOf="@+id/btn4" />

    <Button android:id="@+id/btn8" style="@style/CalcButton" android:text="8"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@+id/btn9" app:layout_constraintBottom_toTopOf="@+id/btn5" />

    <Button android:id="@+id/btn9" style="@style/CalcButton" android:text="9"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btnMultiply" app:layout_constraintBottom_toTopOf="@+id/btn6" />

    <Button android:id="@+id/btnMultiply" style="@style/CalcButton.Operator" android:text="×"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnMinus" />

    <Button android:id="@+id/btn4" style="@style/CalcButton" android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/btn7" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn5" app:layout_constraintBottom_toTopOf="@+id/btn1" />

    <Button android:id="@+id/btn5" style="@style/CalcButton" android:text="5"
        app:layout_constraintTop_toBottomOf="@+id/btn7" app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn6" app:layout_constraintBottom_toTopOf="@+id/btn2" />

    <Button android:id="@+id/btn6" style="@style/CalcButton" android:text="6"
        app:layout_constraintTop_toBottomOf="@+id/btn7" app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btnMinus" app:layout_constraintBottom_toTopOf="@+id/btn3" />

    <Button android:id="@+id/btnMinus" style="@style/CalcButton.Operator" android:text="−"
        app:layout_constraintTop_toBottomOf="@+id/btn7" app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnPlus" />

    <Button android:id="@+id/btn1" style="@style/CalcButton" android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/btn4" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn2" app:layout_constraintBottom_toTopOf="@+id/btnSciTrigger" />

    <Button android:id="@+id/btn2" style="@style/CalcButton" android:text="2"
        app:layout_constraintTop_toBottomOf="@+id/btn4" app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn3" app:layout_constraintBottom_toTopOf="@+id/btn0" />

    <Button android:id="@+id/btn3" style="@style/CalcButton" android:text="3"
        app:layout_constraintTop_toBottomOf="@+id/btn4" app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/btnPlus" app:layout_constraintBottom_toTopOf="@+id/btnDot" />

    <Button android:id="@+id/btnPlus" style="@style/CalcButton.Operator" android:text="+"
        app:layout_constraintTop_toBottomOf="@+id/btn4" app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnEquals" />

    <Button android:id="@+id/btnSciTrigger" style="@style/CalcButton.Sci" android:text="Sci"
        app:layout_constraintTop_toBottomOf="@+id/btn1" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn0" app:layout_constraintBottom_toBottomOf="parent" />

    <Button android:id="@+id/btn0" style="@style/CalcButton" android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/btn1" app:layout_constraintStart_toEndOf="@+id/btnSciTrigger"
        app:layout_constraintEnd_toStartOf="@+id/btnDot" app:layout_constraintBottom_toBottomOf="parent" />

    <Button android:id="@+id/btnDot" style="@style/CalcButton" android:text="."
        app:layout_constraintTop_toBottomOf="@+id/btn1" app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintEnd_toStartOf="@+id/btnEquals" app:layout_constraintBottom_toBottomOf="parent" />

    <Button android:id="@+id/btnEquals" style="@style/CalcButton.Equals" android:text="="
        app:layout_constraintTop_toBottomOf="@+id/btn1" app:layout_constraintStart_toEndOf="@+id/btnDot"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>